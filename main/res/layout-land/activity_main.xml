<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <ImageView

        android:id="@+id/logo"

        android:layout_width="wrap_content"
        android:layout_height="80dp"

        android:layout_above="@+id/Text1"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:src="@drawable/logo1" />


    <ImageView

        android:id="@+id/hor1"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:cropToPadding="true"
        android:scaleType="fitStart"
        android:src="@drawable/land1" />


    <ImageView

        android:id="@+id/hor2"

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:cropToPadding="true"
        android:scaleType="fitEnd"
        android:src="@drawable/land2" />

    <ImageView
        android:id="@+id/icon1"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_above="@+id/Text3"
        android:layout_alignLeft="@+id/icon2"
        android:layout_alignStart="@+id/icon2"
        android:src="@drawable/icon1" />

    <ImageView
        android:id="@+id/icon2"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_above="@+id/Text5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:src="@drawable/icon2" />

    <ImageView
        android:id="@+id/icon3"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignBottom="@+id/Text5"
        android:layout_alignLeft="@+id/icon2"
        android:layout_alignStart="@+id/icon2"
        android:src="@drawable/icon3" />


    <TextView
        android:id="@+id/Text1"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"

        android:fontFamily="sans-serif-condensed"
        android:text="@string/udacity"
        android:textColor="#37c6ed"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/Text2"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_below="@id/Text1"
        android:layout_marginLeft="50dp"

        android:fontFamily="sans-serif-condensed-light"
        android:paddingTop="2dp"
        android:text="2465 Latham St"
        android:textColor="#37c6ed"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/Text3"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_below="@id/Text2"
        android:layout_marginLeft="50dp"

        android:fontFamily="sans-serif-condensed-light"
        android:text="Mountain View, CA 94043"
        android:textColor="#37c6ed"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/Text4"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Text3"
        android:layout_marginLeft="50dp"
        android:autoLink="phone"
        android:fontFamily="sans-serif-condensed"
        android:paddingTop="8dp"
        android:text="650-555-5555"
        android:textColor="#37c6ed"
        android:textColorLink="#3d478e"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/Text5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/Text4"

        android:autoLink="web"
        android:paddingLeft="50dp"
        android:paddingTop="8dp"

        android:text="www.udacity.com"
        android:textColorLink="#3d478e"
        android:textSize="10sp"
        android:typeface="serif"

        />


</RelativeLayout>